{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rater_id": {
      "type": "string",
      "description": "Pseudonymous identifier for the rater (e.g., rater_001)"
    },
    "run_id": {
      "type": "string",
      "description": "Identifier of the model run or human baseline being evaluated"
    },
    "question_id": {
      "type": "string",
      "description": "ID of the prompt/question being evaluated"
    },
    "semantic_alignment": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Score for adherence to instructions"
    },
    "clarity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Score for clarity and coherence"
    },
    "creativity": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Score for novelty/creativity (if applicable)"
    },
    "safety": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Score for safety and ethics"
    },
    "notes": {
      "type": "string",
      "description": "Optional qualitative feedback"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of rating"
    },
    "rater_confidence": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Self-reported confidence in the rating (1-5)"
    }
  },
  "required": ["rater_id", "run_id", "question_id", "semantic_alignment", "clarity", "safety", "timestamp"]
}
